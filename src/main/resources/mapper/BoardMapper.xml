<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.boooard.mapper.BoardMapper">

    <sql id="postColumns">
        id
        , title
        , content
        , writer
        , view_cnt
        , notice_yn
        , delete_yn
        , created_date
        , modified_date
    </sql>

    <!-- 게시글 저장 -->
    <insert id="insert" parameterType="com.example.boooard.dto.request.ReqInsertDTO" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
            INSERT into tb_post (<include refid="postColumns" />)
            VALUES (0, #{title},#{content},#{writer},0,0,0,now(),now())
    </insert>
    <!-- 게시글 조회 -->
    <select id="findAll" resultType="com.example.boooard.dto.response.PostResponse">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_post
        WHERE
        delete_yn = 0
        ORDER BY
        id DESC
    </select>

    <select id="findById" parameterType="Long" resultType="com.example.boooard.dto.response.PostResponse">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_post
        WHERE
        id=#{id}
    </select>

    <delete id="deleteById" parameterType="long">
        UPDATE tb_post
        SET
            delete_yn = 1
        WHERE
            id = #{id}
    </delete>
</mapper>